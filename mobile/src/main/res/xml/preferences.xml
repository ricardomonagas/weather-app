<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <!-- Speed Units -->

    <ListPreference

        android:key="@string/speed_unit_key"
        android:title="@string/speed_unit"
        android:entries="@array/speed_units"
        android:entryValues="@array/speed_units_values"
        android:summary="@string/kilometers_ph"
        android:dependency="@string/speed_unit_key"
    />


    <!-- Temperature Units -->

    <ListPreference
        android:key="@string/temperature_unit_key"
        android:title="@string/temperature_unit"
        android:entries="@array/temperature_units"
        android:entryValues="@array/temperature_units_values"
        android:summary="@string/celsius"
        android:dependency="@string/temperature_unit_key"
    />

</PreferenceScreen>