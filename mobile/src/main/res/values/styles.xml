<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="PreferencesTheme" parent="AppTheme.Base">

        <item name="android:textColor">@color/preferences_primary_color</item>
        <item name="android:textColorPrimary">@color/preferences_primary_color</item>
        <item name="android:textColorSecondary">@color/preferences_secondary_color</item>

    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">

        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>

    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">

        <item name="android:background">#5444</item>

    </style>


    <style name="TextAppearance_ToolbarTitle" parent="Base.TextAppearance.AppCompat">
         <item name="android:textColor">@color/white</item>
         <item name="android:textSize">18dip</item>
        <item name="fontPath">@string/roboto_regular</item>
    </style>

    <!-- General -->

    <style name="Text">
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Today Forecast -->

    <style name="Text.City">
        <item name="android:textSize">@dimen/view_city_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_marginTop">@dimen/view_city_margin_top</item>
        <item name="fontPath">@string/roboto_light</item>
    </style>

    <style name="Text.Temperature">
        <item name="android:textSize">@dimen/view_temperature_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginBottom">@dimen/view_temperature_margin_bottom</item>
        <item name="fontPath">@string/roboto_medium</item>
    </style>

    <style name="Text.Info">
        <item name="android:textSize">@dimen/view_info_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontPath">@string/roboto_medium</item>
    </style>


    <style name="Divider">
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_marginBottom">@dimen/view_divider_margin_bottom</item>
    </style>


    <!-- Forecast: List Item -->

    <style name="Text.Day">
        <item name="android:textSize">@dimen/view_day_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontPath">@string/roboto_light</item>
    </style>


    <style name="Text.ForecastTemperature">
        <item name="android:textSize">@dimen/view_forecast_temperature_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="fontPath">@string/roboto_medium</item>
    </style>

    <style name="Text.Condition">
        <item name="android:textSize">@dimen/view_condition_text_size</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="fontPath">@string/roboto_light</item>
    </style>

    <!-- Loading -->

    <style name="Text.Loading">
        <item name="android:textSize">@dimen/view_loading_text_size</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:layout_marginTop">@dimen/view_loading_text_margin_top</item>
        <item name="fontPath">@string/roboto_light</item>
    </style>

    <!-- Drawer -->

    <style name="DrawerItem">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">22dip</item>
        <item name="fontPath">@string/roboto_regular</item>
    </style>

</resources>
