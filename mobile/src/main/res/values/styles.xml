<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/action_bar_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">

        <item name="android:background">#5444</item>

    </style>

    <style name="CustomPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">

        <item name="android:background">@color/white</item>

    </style>

    <style name="TextAppearance_ToolbarTitle" parent="Base.TextAppearance.AppCompat">
         <item name="android:textColor">@color/white</item>
         <item name="android:textSize">18dip</item>
    </style>

    <!-- General -->

    <style name="Text">
        <item name="android:textSize">18dp</item>
    </style>

    <!-- Today Forecast -->

    <style name="Text.City">
        <item name="android:textSize">@dimen/text_size_city</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <!-- Forecast: List Item -->

    <style name="Text.Day">
        <item name="android:textSize">@dimen/view_day_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Temperature">
        <item name="android:textSize">@dimen/view_temperature_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Condition">
        <item name="android:textSize">@dimen/view_condition_text_size</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Drawer -->

    <style name="DrawerItem">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">22dip</item>
    </style>

</resources>
